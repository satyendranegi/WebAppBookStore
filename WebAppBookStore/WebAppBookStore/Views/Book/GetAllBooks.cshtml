@model IEnumerable<WebAppBookStore.Models.BookModel>

<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/1999/xhtml"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description </p>
                        <div class="d-flex justify-content-between align-content-center">
                            <div class="btn-group">
                                <a href="/book/getbook/@book.Id.ToString()" class="btn btn-sm btn-outline-secondary"> View details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>